<% provide :page_title, 'Questions' %>
<% currently_at 'Questions' %>
<h1 class="mb-4">Question</h1>
<%= link_to 'New Question', new_question_path, class: 'btn btn-light btn-lg' %>
<%= paginate @questions, window: 1 %>
<% @questions.each do |q| %>
  <article class="card mt-3">
    <div class="card-body">
      <h4><%= q.title %></h4>
      <selection class="card-text">
        <small>
          <time datetime="<%= q.formatted_created_at %>">
            <%= q.formatted_created_at %>
          </time>
        </small>
        <p class="my-2">
          <%= truncate strip_tags(q.body), length: 150, omission: ' ... (continued)' %>
        </p>
      </selection>
      <div class="d-flex justify-content-between">
        <div class="d-flex gap-2">
          <%= link_to 'Show', question_path(q), class: 'btn btn-primary' %>
          <%= link_to 'Edit', edit_question_path(q), class: 'btn btn-secondary' %>
        </div>
        <div>
          <%= button_to 'Destoy',  question_path(q), class: 'btn btn-danger',
        method: :delete, data:{turbo_confirm: "Are you sure?"} %>
        </div>
      </div>
    </div>
  </article>
<% end %>
<%= paginate @questions, window: 1 %>
