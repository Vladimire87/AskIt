<% @questions.each do |q| %>
  <h2><%= q.title %></h2>
  <time datetime="<%= q.formatted_created_at %>">
    <%= q.formatted_created_at %>
  </time>
  <p>
    <%= q.body %>
  </p>
  <%= link_to 'Show', question_path(q) %> |
  <%= link_to 'Edit', edit_question_path(q) %> |
  <%= button_to 'Destoy',  question_path(q), method: :delete, data:{turbo_confirm: "Are you sure?"} %>
<% end %>
